# ESPHome secrets file example
# Copy this file to secrets.yaml and update with your actual values
# Add secrets.yaml to .gitignore to keep credentials private

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# MQTT Configuration
# These values are compiled into the firmware
# To change MQTT settings, update these values and reflash the device
mqtt_broker: "homeassistant.local"    # MQTT broker IP or hostname
mqtt_port: 1883                       # MQTT port (1883 for standard, 8883 for TLS)
mqtt_username: ""                     # MQTT username (leave empty if not required)
mqtt_password: ""                     # MQTT password (leave empty if not required)

# Optional: API Encryption Key
# api_encryption_key: "your-32-character-encryption-key-here"

# Optional: OTA Password
# ota_password: "your-ota-password"